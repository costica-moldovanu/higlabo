<InputFieldPanel ClassName="@ClassName" Name="@Name" Text="@Text" ValidateResult="@ValidateResult">
    <InputText @bind-Value="@Value" class="textbox date"
               @onfocus="e => this.SelectDateCalendarPanelVisible = true"
               @oninput="e => this.InputText_Input(e)"
               @onblur="async e => await this.InputText_Blur(e)"></InputText>
    @if (SelectDateCalendarPanelVisible)
    {
        <SelectDateCalendarPanel DateSelected="date => this.DateSelected_Callback(date)"></SelectDateCalendarPanel>
    }
</InputFieldPanel>
