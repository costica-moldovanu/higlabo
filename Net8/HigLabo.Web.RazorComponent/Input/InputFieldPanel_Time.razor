@{
    var stringValue = this.TimeFormat(this.Value);
}
<InputFieldPanel Layout="@Layout" Name="@Name" Text="@Text" ValidateResult="@ValidateResult">
    <input type="text" class="textbox time" value="@stringValue"
           @onchange="e => this.OnValueChanged(e.Value?.ToString()?.ToTimeOnly())"
           @onclick="e => this.SelectTimePanelVisible = true"
           @oninput="e => this.InputText_Input(e)"
           @onblur="async e => await this.Textbox_Blur(e)"></input>
    @if (SelectTimePanelVisible)
    {
        <SelectTimePanel TimeSelected="async time => await this.TimeSelected_Callback(time)" Closed="() => this.SelectTimePanelVisible = false"></SelectTimePanel>
    }
</InputFieldPanel>
