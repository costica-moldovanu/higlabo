<InputFieldPanel Name="@Name" Text="@Text" FieldNameVisible="@FieldNameVisible" ValidateResult="@ValidateResult"
    AddIconVisible="true" OnAddIconClicked="async e => await OnAddIconClicked()">
    @if (SelectRecordPanelVisible)
    {
        <SelectRecordPanel SearchContainerPanelVisible="SearchContainerPanelVisible" OnRecordListLoading="OnRecordListLoading" 
            OnRecordSelected="async r => await Record_Selected(r)" OnClosed="e => this.SelectRecordPanelVisible = false"></SelectRecordPanel>
    }
    @if (this.ChildContent != null)
    {
        <div class="record-list-panel sort-panel" sort-panel="true">@ChildContent</div>
    }
</InputFieldPanel>
